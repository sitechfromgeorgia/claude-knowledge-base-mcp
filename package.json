{
  "name": "claude-knowledge-base-mcp",
  "version": "3.0.0",
  "description": "Advanced Local Knowledge Management System for Claude Desktop with SQLite, local NLP, Marathon Mode, and seamless tool integration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run tests/integration/**/*.test.ts",
    "test:performance": "vitest run tests/performance/**/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "setup": "node scripts/setup.js",
    "benchmark": "node scripts/benchmark.js",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "claude",
    "mcp",
    "knowledge-base",
    "ai-assistant",
    "persistent-memory",
    "marathon-mode",
    "desktop",
    "sqlite",
    "local-nlp",
    "semantic-search",
    "knowledge-graph",
    "desktop-commander",
    "automation",
    "offline"
  ],
  "author": "Acura Group",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitechfromgeorgia/claude-knowledge-base-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/sitechfromgeorgia/claude-knowledge-base-mcp/issues"
  },
  "homepage": "https://github.com/sitechfromgeorgia/claude-knowledge-base-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "better-sqlite3": "^9.2.2",
    "natural": "^6.12.0",
    "stopwords": "^2.0.1",
    "chokidar": "^3.5.3",
    "lru-cache": "^10.1.0",
    "fastest-levenshtein": "^1.0.16",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "@types/node-cron": "^3.0.11",
    "@types/better-sqlite3": "^7.6.8",
    "@types/natural": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "benchmark": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "config/**/*",
    "migrations/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "claude-kb": "./dist/server.js"
  },
  "optionalDependencies": {
    "inquirer": "^9.2.12",
    "fuse.js": "^7.0.0"
  }
}