{
  "name": "claude-knowledge-base-mcp",
  "version": "2.0.0",
  "description": "Advanced Knowledge Management System for Claude Desktop with persistent memory, Marathon Mode, and sophisticated command syntax",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:memory": "vitest run src/memory-system.test.ts",
    "test:integration": "vitest run src/integration.test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "setup": "node scripts/setup.js"
  },
  "keywords": [
    "claude",
    "mcp",
    "knowledge-base",
    "ai-assistant",
    "persistent-memory",
    "marathon-mode",
    "desktop",
    "vector-search",
    "knowledge-graph",
    "automation"
  ],
  "author": "Acura Group",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitechfromgeorgia/claude-knowledge-base-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/sitechfromgeorgia/claude-knowledge-base-mcp/issues"
  },
  "homepage": "https://github.com/sitechfromgeorgia/claude-knowledge-base-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "config/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "claude-kb": "./dist/server.js"
  },
  "optionalDependencies": {
    "qdrant-js": "^1.11.0",
    "chromadb": "^1.8.1",
    "@pinecone-database/pinecone": "^3.0.0",
    "@supabase/supabase-js": "^2.45.4"
  },
  "peerDependencies": {
    "n8n-workflow": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "n8n-workflow": {
      "optional": true
    }
  }
}
